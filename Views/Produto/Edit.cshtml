@model DanielLuca.Models.Produto

@{
    ViewData["Title"] = "Atualizar Produto";
}

<form method = "post">
    <div class = "border p-3 mt-4">
        <div class = "row pb-2">
            <h2 class = "text-primary">Atualizar Produto</h2>
            <hr/>
        </div>
        <div class = "mb-3 row p-1">
            <label asp-for = "Nome" class = "p-0"></label>
            <input asp-for = "Nome" type = "text" class = "form-control"/>
            <span asp-validation-for = "Nome" class = "text-danger"></span>
        </div>
        <div class = "mb-3 row p-1">
            <label asp-for = "Descricao" class = "p-0"></label>
            <input asp-for = "Descricao" type = "text" class = "form-control"/>
            <span asp-validation-for = "Descricao" class = "text-danger"></span>
        </div>
        <div class = "mb-3 row p-1">
            <label asp-for = "Quantidade" class = "p-0"></label>
            <input asp-for = "Quantidade" type = "text" class = "form-control"/>
            <span asp-validation-for = "Quantidade" class = "text-danger"></span>
        </div>
        <div class = "mb-3 row p-1">
            <label asp-for = "Preco" class = "p-0"></label>
            <input asp-for = "Preco" type = "text" class = "form-control"/>
            <span asp-validation-for = "Preco" class = "text-danger"></span>
        </div>
        <div class = "mb-3 row p-1">
            <label asp-for = "MarcaId" class = "p-0"></label>
            <select asp-for="MarcaId" class ="form-control" asp-items="ViewBag.MarcaId">
                <option disabled selected>Selecione uma marca</option>
            </select>
            <span asp-validation-for = "MarcaId" class = "text-danger"></span>
        </div>
        <div class = "row">
            <div class = "col-6 col-md-3">
                <button type = "submit" class = "btn btn-outline-primary border form-control">Atualizar</button>
            </div>
            <div class = "col-6 col-md-3">
                <a asp-controller= "Produto" asp-action= "Index" class = "btn btn-outline-danger border form-control">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
