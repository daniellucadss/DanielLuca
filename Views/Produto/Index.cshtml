@model IEnumerable<DanielLuca.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class = "container">
    <div class = "row pt-4 pb-3">
        <div class = "col-6">
            <h2 class = "text-primary">
                Lista de Produtos
            </h2>
        </div>
        <div class = "col-6 text end">
            <a asp-controller = "Produto" asp-action = "Create" class = "btn btn-outline-primary border">
                <i class="bi bi-plus-circle"></i> Novo Produto
            </a>
        </div>
    </div>
    <table class = "table table-striped">
        <thead>
        <tr>
            <th>
                Nome do Produto
            </th>
            <th>
                Descrição
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Preço
            </th>
            <th>
                Marca
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model) 
            {
                <tr>
                    <td>@obj.Nome</td>
                    <td>@obj.Descricao</td>
                    <td>@obj.Quantidade</td>
                    <td>@obj.Preco</td>
                    <td>@obj.Marca.Nome</td>
                    <td>
                        <div class = "w-75 btn-group" role = "group">
                            <a asp-controller = "Produto" asp-action = "Edit" asp-route-id = "@obj.Id" class = "btn btn-outline-primary border mx-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-controller = "Produto" asp-action = "Details" asp-route-id = "@obj.Id" class = "btn btn-outline-primary border mx-2">
                                <i class="bi bi-search"></i> Detalhes
                            </a>
                            <a asp-controller = "Produto" asp-action = "Delete" asp-route-id = "@obj.Id" class = "btn btn-outline-danger border mx-2">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table> 
</div>

