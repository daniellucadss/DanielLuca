@model DanielLuca.Models.PagamentoComCartao

@{
    ViewData["Title"] = "Detalhes do Pagamento com Cartão";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-primary">Detalhes do Pagamento com Cartão</h2>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <dt>@Html.DisplayNameFor(model => model.NumeroDoCartao)</dt>
        </div>
        <div class="col-md-10">
            <dd>@Html.DisplayFor(model => model.NumeroDoCartao)</dd>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <dt>@Html.DisplayNameFor(model => model.Bandeira)</dt>
        </div>
        <div class="col-md-10">
            <dd>@Html.DisplayFor(model => model.Bandeira)</dd>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <dt>@Html.DisplayNameFor(model => model.NomeDoCobrado)</dt>
        </div>
        <div class="col-md-10">
            <dd>@Html.DisplayFor(model => model.NomeDoCobrado)</dd>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <dt>@Html.DisplayNameFor(model => model.InformacoesAdicionais)</dt>
        </div>
        <div class="col-md-10">
            <dd>@Html.DisplayFor(model => model.InformacoesAdicionais)</dd>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-3">
            <a asp-controller="PagamentoComCartao" asp-action = "Index" class = "btn btn-outline-primary border form-control">Voltar</a>
        </div>
        <div class="col-md-3">
            <a asp-controller = "PagamentoComCartao" asp-action = "Edit" asp-route-id = "@Model.Id" class = "btn btn-outline-primary border form-control">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
        </div>
    </div>
</div>
