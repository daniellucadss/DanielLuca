@model DanielLuca.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<form method = "post">
    <div class = "border p-3 mt-4">
        <div class = "row pb-2">
            <h2 class = "text-primary">Editar Cliente</h2>
            <hr/>
        </div>
        <div class = "mb-3 row p-1">
            <label asp-for = "Nome" class = "p-0"></label>
            <input asp-for = "Nome" type = "text" class = "form-control"/>
            <span asp-validation-for = "Nome" class = "text-danger"></span>
        </div>
        <div class = "row">
            <div class = "col-6 col-md-3">
                <button type = "submit" class = "btn btn-outline-primary border form-control" >Atualizar</button>
            </div>
            <div class = "col-6 col-md-3">
                <a asp-controller= "Cliente" asp-action= "Index" class = "btn btn-outline-danger border form-control">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
