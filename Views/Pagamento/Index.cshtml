@model IEnumerable<DanielLuca.Models.Pagamento>

@{
    ViewData["Title"] = "Lista de Pagamentos";
}

<div class = "container">
    <div class = "row pt-4 pb-3">
        <div class = "col-6">
            <h2 class = "text-primary">
                Lista de Pagamentos
            </h2>
        </div>
        <div class = "col-6 text end">
            <a asp-controller = "Pagamento" asp-action = "Create" class = "btn btn-outline-primary border">
                <i class="bi bi-plus-circle"></i> Novo Pagamento
            </a>
        </div>
    </div>
    <table class = "table table-striped">
        <thead>
        <tr>
            <th>
                Data Limite
            </th>
            <th>
                Valor Do Pagamento
            </th>
            <th>
                Pagamento Realizado?
            </th>
            <th>
                Nota de Venda
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model) 
            {
                <tr>
                    <td>@obj.DataLimite</td>
                    <td>@obj.Valor</td>
                    <td>
                    @if (obj.Pago)
                    {
                        <p>Sim</p>
                    }
                    else
                    {
                        <p>NÃ£o</p>
                    }
                    </td>
                    <td>@obj.NotaDeVenda.Id</td>
                    <td>
                        <div class = "w-75 btn-group" role = "group">
                            <a asp-controller = "Pagamento" asp-action = "Edit" asp-route-id = "@obj.Id" class = "btn btn-outline-primary border mx-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-controller = "Pagamento" asp-action = "Details" asp-route-id = "@obj.Id" class = "btn btn-outline-primary border mx-2">
                                <i class="bi bi-search"></i> Detalhes
                            </a>
                            <a asp-controller = "Pagamento" asp-action = "Delete" asp-route-id = "@obj.Id" class = "btn btn-outline-danger border mx-2">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table> 
</div>
